<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent"
  android:layout_height="match_parent">



  <include layout="@layout/toolbar"/>


  <LinearLayout
    android:layout_marginTop="8dp"
    android:layout_weight="0.9"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:gravity="right">


    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="برای عضویت در مستر شاپ آدرس ایمیل و کلمه عبور خود را وارد کنید."
      android:layout_gravity="center"
      android:layout_marginTop="4dp"
      android:layout_marginBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="پست الکترونیک"
        android:drawableRight="@drawable/ic_email_black_24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textEmailAddress"
        android:id="@+id/edt_Email"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="کلمه عبور"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textPassword"
        android:id="@+id/edt_pass"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">


      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="تکرار کلمه عبور"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:inputType="textPassword"
        android:id="@+id/edt_repass"/>

    </com.google.android.material.textfield.TextInputLayout>





  </LinearLayout>

  <LinearLayout
    android:layout_weight="0.1"
    android:layout_gravity="bottom"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/linearSingUp"
    android:orientation="horizontal"
    android:background="#C3C3C2">

    <ImageView
      android:layout_gravity="center_vertical"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:scaleType="fitCenter"
      android:src="@drawable/ic_arrow_back_black_24dp"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:text="عضویت در مستر شاپ"/>

  </LinearLayout>



</LinearLayout>